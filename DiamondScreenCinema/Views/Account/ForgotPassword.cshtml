@model ForgotPasswordVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title id="pageTitle">Forgot Password | Diamond Screen Cinema</title>
    <link rel="icon" href="~/images/Slogan.png" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Customer View/Account/ForgotPassword.css" asp-append-version="true" />
</head>
    
<body>
    <div class="logo">
        <a asp-action="Index" asp-controller="Home">
            <img src="~/images/Icon.png">
            <h1>Diamond Screen Cinema</h1>
        </a>
    </div>

    <div class="content">
        <h1>Forgot Password</h1>
        <p class="subtitle">Enter your credentials to reset your password</p>

        <form class="auth-form" asp-action="ForgotPassword" method="post">
            <span asp-validation-for="Email"></span>
            <div class="input-group" id="emailGroup">
                <span class="material-symbols-outlined">mail</span>
                <input asp-for="Email" placeholder="Email">
            </div>

            <div class="phone-row" id="phoneLoginRow" style="display:none;">
                <div class="input-group phone-prefix-group">
                    <div class="prefix-box">
                        <img src="https://flagcdn.com/w2560/my.png" class="flag-icon">
                        <span class="prefix-text">+60</span>
                        <input asp-for="PhonePrefix" type="hidden" value="+60" />
                    </div>
                </div>

                <div class="input-group phone-number-group">
                    <span class="material-symbols-outlined phone-icon">call</span>
                    <input asp-for="Phone" class="phone-input" placeholder="Phone Number">
                </div>
            </div>

            <button class="primary-btn">Submit</button>

            <div class="form-bottom">
                <p class="toggle-text">
                    <span class="toggle-btn" id="phoneLoginBtn">Use phone number instead</span>
                    <span class="toggle-btn" id="emailLoginBtn" style="display:none;">Use email instead</span>
                </p>
                <a class="toggle-text" asp-action="Authenticate">Back to Login</a>
            </div>
        </form>
    </div>

    <script src="~/js/Customer View/Account/ForgotPassword.js" asp-append-version="true"></script>
</body>
</html>