@model PhoneVerificationVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Diamond Screen Cinema - Security Questions</title>

    <link rel="icon" href="~/images/Slogan.png" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Customer View/Account/VerifyPhone.css" asp-append-version="true" />
</head>

<body>

    <div class="container">
        <div class="logo">
            <h1><span>DIAMOND</span> SCREEN CINEMA</h1>
            <p>Premium Cinema Experience</p>
        </div>

        <div class="header">
            <h2>Set Up Your Security Questions</h2>
            <p>Choose 3 security questions and provide answers. These will help verify your identity if you lose access to your account.</p>
        </div>

        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <form asp-action="ResetPasswordPhone" method="post" class="sq-form">
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <div class="sq-block">
                <label>Security Question 1</label>

                <div class="custom-dropdown" data-target="Question1">
                    <div class="dropdown-selected">Select a question</div>
                    <div class="dropdown-options">
                        @foreach (var q in Model.AvailableQuestions)
                        {
                            <div class="dropdown-option" data-value="@q">@q</div>
                        }
                    </div>
                </div>

                <input type="hidden" asp-for="Question1" />
                <span asp-validation-for="Question1" class="field-validation-error"></span>

                <input asp-for="Answer1" class="sq-input" placeholder="Your answer" autocomplete="off" />
                <span asp-validation-for="Answer1" class="field-validation-error"></span>
            </div>

            <div class="sq-block">
                <label>Security Question 2</label>

                <div class="custom-dropdown" data-target="Question2">
                    <div class="dropdown-selected">Select a question</div>
                    <div class="dropdown-options">
                        @foreach (var q in Model.AvailableQuestions)
                        {
                            <div class="dropdown-option" data-value="@q">@q</div>
                        }
                    </div>
                </div>

                <input type="hidden" asp-for="Question2" />
                <span asp-validation-for="Question2" class="field-validation-error"></span>

                <input asp-for="Answer2" class="sq-input" placeholder="Your answer" autocomplete="off" />
                <span asp-validation-for="Answer2" class="field-validation-error"></span>
            </div>


            <div class="sq-block">
                <label>Security Question 3</label>

                <div class="custom-dropdown" data-target="Question3">
                    <div class="dropdown-selected">Select a question</div>
                    <div class="dropdown-options">
                        @foreach (var q in Model.AvailableQuestions)
                        {
                            <div class="dropdown-option" data-value="@q">@q</div>
                        }
                    </div>
                </div>

                <input type="hidden" asp-for="Question3" />
                <span asp-validation-for="Question3" class="field-validation-error"></span>

                <input asp-for="Answer3" class="sq-input" placeholder="Your answer" autocomplete="off" />
                <span asp-validation-for="Answer3" class="field-validation-error"></span>
            </div>


            <button class="verify-button">Submit</button>

        </form>

        <div class="footer">
            <p>Need help? <a href="/Support">Contact Support</a></p>
            <p>© 2025 Diamond Screen Cinema. All rights reserved.</p>
        </div>

    </div>

    <script src="~/js/Customer View/Account/VerifyPhone.js"></script>
</body>
</html>