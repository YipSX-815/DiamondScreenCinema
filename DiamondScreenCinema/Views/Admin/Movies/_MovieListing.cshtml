<div id="movieGridContainer">
    @if (Model.Count == 0)
    {
        <div class="empty-result">
            <i class="fas fa-film"></i>
            <h2>No Movies Found</h2>
            <p>Try changing your filter or search term.</p>
        </div>
    }
    else
    {
        <div class="movie-grid">
            @foreach (var movie in Model)
            {
                var statusClass = movie.Status?.ToLower() ?? "showing";
                <div class="movie-card" data-id="@movie.MovieId">
                    <div class="poster-wrapper">
                        <img src="@Url.Content(movie.Poster)" class="movie-poster" draggable="false" />
                    </div>
                    <div class="movie-content">
                        <h3 class="movie-title">@movie.Title</h3>
                        <div class="movie-info">
                            <span>@movie.Genre</span>
                            <span class="dot">•</span>
                            <span>@movie.Language</span>
                            <span class="dot">•</span>
                            <span>@movie.ReleaseDate.ToString("dd-MM-yyyy")</span>
                        </div>
                        <div class="movie-actions">
                            <button class="status-badge @statusClass status-btn"
                                    data-status="@movie.Status"
                                    data-id="@movie.MovieId"
                                    type="button">
                                @movie.Status
                            </button>
                            <div class="action-buttons">
                                <a class="action-btn view-btn"
                                   href="/Admin/Movies?Page=MovieDetail&id=@movie.MovieId">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="action-btn update-btn"
                                   href="/Admin/Movies?Page=MovieUpdate&id=@movie.MovieId">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="action-btn delete-btn delete-single"
                                   data-id="@movie.MovieId">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="pagination" data-total-pages="@ViewBag.TotalPages">
            @if (ViewBag.TotalPages > 1)
            {
                <button class="page-btn prev">‹</button>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <button class="page-btn @(i == ViewBag.CurrentPage ? "active" : "")">@i</button>
                }
                <button class="page-btn next">›</button>
            }
        </div>
    }
</div>
