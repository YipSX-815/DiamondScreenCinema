                <td>012-7886543</td>
                <td>Male</td>
                <td>CEO</td>
                <td><span class="status-active">Active</span></td>
                <td>
                    <div class="action-buttons">
                        <a asp-controller="Admin" asp-action="Users" asp-route-id="UpdateAdmin" class="action-btn action-edit" title="Edit Admin Detail">
                            <span class="material-symbols-outlined" style="font-size: 16px;">edit</span>
                        </a>
                        <button class="action-btn action-disable" onclick=# title="Lock">
                            <span class="material-symbols-outlined" style="font-size: 16px;">account_circle_off</span>
                        </button>
                    </div>
                </td>
            </tr>
            <tr>
                <td>A0002</td>
                <td>Joan Hau</td>
