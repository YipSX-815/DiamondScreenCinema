@{
    Layout = "_AdminLayout";
}

@section head {
    <link href="~/css/Admin View/Users/CustomerManagement.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin View/AdminLayout.css" asp-append-version="true" />
}

<div class="menu-container">
    <div class="title-top">
        <h1>Admin Management</h1>
        <p>Manage all admins</p>
    </div>

    <partial name="Users/_AdminOption" />
</div>

<div class="user-table-container">
    <table class="user-table">
        <thead>
            <tr>
                <th>Admin ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Gender</th>
                <th>Position</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>A0001</td>
                <td>Wong Wai Zhong</td>
