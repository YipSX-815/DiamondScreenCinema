@{
    Layout = "_AdminLayout";
}

@section head {
    <link href="~/css/Admin View/Users/CustomerManagement.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin View/AdminLayout.css" asp-append-version="true" />
}

<div class="update-container">
    <div class="update-header">
        <h1>👤 Update Staff</h1>
    </div>

    <div class="content">
        <!-- Profile Section -->
        <div class="profile-section">
            <div class="profile-picture-section">
                <img src="~/images/default_logo.png" alt="Profile Picture" class="profile-picture" id="profile-picture">
                <div class="profile-picture-text">PROFILE PICTURE</div>
                <div class="profile-picture-subtext">CLICK IMAGE TO CHANGE</div>
                <input type="file" id="profile-picture-input" accept="image/*">
            </div>

            <div class="user-info-display">
                <div class="user-id-display">S0001</div>
                <div class="email-display">daniel.lee13@hotmail.com</div>
            </div>
        </div>

        <!-- Personal Information Section -->
        <div class="form-section">
            <div class="section-title">PERSONAL INFORMATION</div>

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" value="Daniel Lee">
                </div>

                <div class="form-group">
                    <label class="form-label">Phone Number</label>
                    <input type="text" class="form-control" value="012-6753544">
                </div>

                <div class="form-group">
                    <label class="form-label">Gender</label>
                    <select class="form-control">
                        <option value="male" selected>Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-section">
            <div class="section-title">ACCOUNT STATUS</div>

            <div class="form-grid">
                <div class="form-group">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-control" id="status">
                        <option value="active" selected>Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Assigned Cinema Information Section -->
        <div class="form-section">
            <div class="section-title">CINEMA INFORMATION</div>

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Cinema ID</label>
                    <select class="form-control" id="assignedCinemaID">
                        <option value="C0001">C0001</option>
                        <option value="C0002" selected>C0002</option>
                        <option value="C0003">C0003</option>
                        <option value="C0004">C0004</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Cinema Name</label>
                    <input type="text" class="form-control readonly-field" value="GSC Pavillion Bukit Jalil" readonly>
                </div>
            </div>
        </div>
    </div>

    <div class="button-group">
        <a asp-controller="Admin" asp-action="Users" asp-route-Page="StaffManagement" class="btn btn-back">
            <span class="material-symbols-outlined">arrow_back</span>
            BACK
        </a>
        <button class="btn btn-update">
            <span class="material-symbols-outlined">save</span>
            UPDATE
        </button>
    </div>
</div>