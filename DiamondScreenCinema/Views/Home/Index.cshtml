@model HomeViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Home | Diamond Screen Cinema";
}

@section Head {
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Customer View/Home/Index.css" asp-append-version="true" />
}


@if (Model.HeroMovies.Any())
{
    <section class="slider-container">
        <div class="slider" id="slider">
            @for (int i = 0; i < Model.HeroMovies.Count; i++)
            {
                var movie = Model.HeroMovies[i];
                <div class="slide @(i == 0 ? "active" : "")" data-trailer="@movie.Trailer" data-movie-id="@movie.MovieId">
                    <img src="@Url.Content(movie.HorizontalPoster)" class="slide-img" alt="@movie.Title" loading="lazy" />
                   
                    <div class="trailer-overlay">
                       
                        <div class="trailer-video">
                            <video loop playsinline crossorigin="anonymous">
                                Your browser does not support the video tag.
                            </video>
                        </div>

                        <iframe class="trailer-iframe"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>

                        <div class="trailer-controls">
                            <button class="btn btn-outline close-trailer">
                                <span class="material-symbols-outlined">close</span>
                                Close Video
                            </button>
                        </div>
                    </div>

                   
                    <div class="trailer-timer-bar"></div>

                    <div class="slide-content">
                        <h2>@movie.Title</h2>
                        <div class="btn-container">
                            <button class="btn btn-primary show-movie-info"
                                    data-movie-id="@movie.MovieId">
                                <span class="material-symbols-outlined" style="font-size: 1.3em; vertical-align: middle;">local_movies</span>
                                BOOK NOW
                            </button>
                            <button class="btn btn-outline show-movie-info"
                                    onclick="location.href='/Home/Movie?Page=MovieInfo&id=@movie.MovieId'">
                                <span class="material-symbols-outlined" style="font-size: 1.3em; vertical-align: middle;">info</span>
                                MORE INFO
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.HeroMovies.Count > 1)
        {
            <div class="slider-nav prev" id="prev">❮</div>
            <div class="slider-nav next" id="next">❯</div>
            <div class="dots" id="dots"></div>
        }
    </section>
}
else
{
    <section class="slider-container hero-empty">
        <div>
            <h2>Experience The Ultimate Cinema</h2>
            <p>Immerse yourself in breathtaking movies on our giant screens with premium sound. New blockbusters arriving soon!</p>
            <button class="btn btn-primary" onclick="location.href='#movies-tabs'">
                <span class="material-symbols-outlined" style="font-size: 1.3em; vertical-align: middle;">movie</span>
                EXPLORE MOVIES
            </button>
        </div>
    </section>
}

<section id="top3" class="section top3-section">
    <div class="section-header">
        <h3>TOP RECOMMENDED MOVIES</h3>
        @if (Model.Top3Movies.Count > 3)
        {
            <div>
                <button class="btn-nav" id="prevTop3">❮</button>
                <button class="btn-nav" id="nextTop3">❯</button>
            </div>
        }
    </div>

    @if (Model.Top3Movies.Any())
    {
        <div class="top3-container">
            <div class="top3-slider" id="top3Slider">
                @foreach (var movie in Model.Top3Movies)
                {
                    <div class="top3-card">
                        <div class="card-inner">
                            @if (!string.IsNullOrEmpty(movie.Poster))
                            {
                                @if (movie.Poster.Contains("themoviedb.org"))
                                {
                                    var optimizedPoster = movie.Poster.Replace("/t/p/original/", "/t/p/w500/");
                                    <img src="@optimizedPoster" alt="@movie.Title" loading="lazy" />
                                }
                                else if (movie.Poster.StartsWith("/") || movie.Poster.StartsWith("~"))
                                {
                                    <img src="@Url.Content(movie.Poster)" alt="@movie.Title" loading="lazy" />
                                }
                                else
                                {
                                    <img src="@Url.Content("~/MovieUpload/poster/" + movie.Poster)" alt="@movie.Title" loading="lazy" />
                                }
                            }
                            else
                            {
                                <img src="https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
                                     alt="@movie.Title" />
                            }
                            <div class="card-content">
                                <h4>@movie.Title</h4>
                                <p>@movie.Genre | @movie.Duration min</p>
                                @{
                                    var avgRating = 4.5;
                                }
                                <div class="rating">
                                    <span class="material-symbols-outlined" style="color: gold;">star</span>
                                    @avgRating.ToString("0.0")/5
                                </div>
                                <div class="movie-actions">
                                    <button class="btn btn-primary show-movie-info"
                                            data-movie-id="@movie.MovieId">
                                        <span class="material-symbols-outlined" style="font-size: 1.2em; vertical-align: middle;">shopping_cart</span>
                                        BOOK NOW
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <h3>No Recommended Movies Available</h3>
            <p>Check back soon for new recommendations!</p>
        </div>
    }
</section>

<section id="movies-tabs" class="section tabs-section">
    <div class="tabs-header">
        <button class="tab-btn active" data-tab="now-showing">NOW SHOWING</button>
        <button class="tab-btn" data-tab="coming-soon">COMING SOON</button>
    </div>

   
    <div class="tab-content active" id="now-showing">
        @if (Model.NowShowingMovies.Any())
        {
            <div class="movies-slider-container">
                <div class="movies-slider" id="nowShowingSlider">
                    @foreach (var movie in Model.NowShowingMovies)
                    {
                        <div class="movie movie-slide">
                            @if (!string.IsNullOrEmpty(movie.Poster))
                            {
                                @if (movie.Poster.Contains("themoviedb.org"))
                                {
                                    var optimizedPoster = movie.Poster.Replace("/t/p/original/", "/t/p/w300/");
                                    <img src="@optimizedPoster" alt="@movie.Title" loading="lazy">
                                }
                                else if (movie.Poster.StartsWith("/") || movie.Poster.StartsWith("~"))
                                {
                                    <img src="@Url.Content(movie.Poster)" alt="@movie.Title" loading="lazy">
                                }
                                else
                                {
                                    <img src="@Url.Content("~/MovieUpload/poster/" + movie.Poster)" alt="@movie.Title" loading="lazy">
                                }
                            }
                            else
                            {
                                <img src="https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=300&q=80"
                                     alt="@movie.Title">
                            }
                            <div class="movie-info">
                                <div class="movie-title">@movie.Title</div>
                                <div class="movie-details">
                                    <strong>Duration:</strong> @movie.Duration min<br>
                                    <strong>Genre:</strong> @movie.Genre<br>
                                    @if (!string.IsNullOrEmpty(movie.Classification))
                                    {
                                        <strong>Rating:</strong>
                                        @movie.Classification
                                    }
                                </div>
                            </div>
                            <div class="movie-actions">
                                <button class="btn btn-primary show-movie-info"
                                        data-movie-id="@movie.MovieId">
                                    BOOK NOW
                                </button>
                            </div>
                        </div>
                    }
                </div>

                @if (Model.NowShowingMovies.Count > 4)
                {
                    <div class="movies-nav movies-prev" id="nowShowingPrev">❮</div>
                    <div class="movies-nav movies-next" id="nowShowingNext">❯</div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <h3>No Movies Currently Showing</h3>
                <p>Check our upcoming movies or visit us soon for new releases!</p>
            </div>
        }
    </div>

  
    <div class="tab-content" id="coming-soon">
        @if (Model.ComingSoonMovies.Any())
        {
            <div class="movies-slider-container">
                <div class="movies-slider" id="comingSoonSlider">
                    @foreach (var movie in Model.ComingSoonMovies)
                    {
                        <div class="movie glass movie-slide">
                            @if (!string.IsNullOrEmpty(movie.Poster))
                            {
                                @if (movie.Poster.Contains("themoviedb.org"))
                                {
                                    var optimizedPoster = movie.Poster.Replace("/t/p/original/", "/t/p/w300/");
                                    <img src="@optimizedPoster" alt="@movie.Title" loading="lazy">
                                }
                                else if (movie.Poster.StartsWith("/") || movie.Poster.StartsWith("~"))
                                {
                                    <img src="@Url.Content(movie.Poster)" alt="@movie.Title" loading="lazy">
                                }
                                else
                                {
                                    <img src="@Url.Content("~/MovieUpload/poster/" + movie.Poster)" alt="@movie.Title" loading="lazy">
                                }
                            }
                            else
                            {
                                <img src="https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=300&q=80"
                                     alt="@movie.Title">
                            }
                            <div class="movie-info">
                                <div class="movie-title">@movie.Title</div>
                                <div class="movie-details">
                                    <strong>Release:</strong> @movie.ReleaseDate.ToString("MMM yyyy")<br>
                                    <strong>Duration:</strong> @movie.Duration min<br>
                                    <strong>Genre:</strong> @movie.Genre
                                </div>
                            </div>
                            <div class="movie-actions">
                                <button class="btn btn-primary">
                                    Pre-Book
                                </button>
                            </div>
                        </div>
                    }
                </div>

                @if (Model.ComingSoonMovies.Count > 4)
                {
                    <div class="movies-nav movies-prev" id="comingSoonPrev">❮</div>
                    <div class="movies-nav movies-next" id="comingSoonNext">❯</div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <h3>No Upcoming Movies Announced</h3>
                <p>Stay tuned for announcements about future releases!</p>
            </div>
        }
    </div>
</section>



@section Script {
    <script src="~/js/Customer View/Home/Index.js"></script>
}
